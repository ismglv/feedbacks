<div class="container">
  <p id="notice"><%= notice %></p>

  <%= form_for @feedback, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, required: true, value: current_user.try(:email), class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, required: true, value: current_user.try(:name), class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :text %>
      <%= f.text_area :text, required: true, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit "Create", class: 'btn btn-default' %>
    </div>
  <% end %>
</div>
